<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            thread="main"
            visible="true">
         <run
               class="org.csstudio.alarm.beast.annunciator.Application">
         </run>
      </application>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.csstudio.alarm.beast.annunciator.application"
            name="Annunciator">
         <property
               name="appName"
               value="Annunciator">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.csstudio"
            name="CSS">
      </category>
      <view
            category="org.csstudio"
            class="org.csstudio.alarm.beast.annunciator.ui.AnnunciatorView"
            icon="icons/annunciator.png"
            id="org.csstudio.alarm.beast.annunciator.view"
            name="%Annunciator"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:alarm?after=org.csstudio.alarm.beast.alarmtree">
         <command
               commandId="org.eclipse.ui.views.showView"
               icon="icons/annunciator.png"
               id="org.csstudio.alarm.beast.annunciator"
               label="%Annunciator"
               mnemonic="%AnnunciatorMnemonic"
               style="push"
               tooltip="%AnnunciatorTT">
            <parameter
                  name="org.eclipse.ui.views.showView.viewId"
                  value="org.csstudio.alarm.beast.annunciator.view">
            </parameter>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.csstudio.platform.ui.css.applications.alarm"
            class="org.csstudio.alarm.beast.annunciator.ui.PreferencePage"
            id="org.csstudio.alarm.beast.annunciator.preferences"
            name="%Annunciator">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.csstudio.alarm.beast.ui.perspective">
         <view
               closeable="true"
               id="org.csstudio.alarm.beast.annunciator.view"
               minimized="false"
               moveable="true"
               relationship="stack"
               relative="org.eclipse.ui.views.PropertySheet"
               showTitle="true"
               visible="false">
         </view>
         <viewShortcut
               id="org.csstudio.alarm.beast.annunciator.view">
         </viewShortcut>
      </perspectiveExtension>
   </extension>

</plugin>
